/**index.wxss**/
.page{
  width: 96%;
  margin:10rpx auto;
}
.page_hd{

  float: left;
}
.music{
  width: 10%;
  height: 90rpx;
  float: right;
  display: flex;
  justify-content: center;
  align-items: center;
}
.music image{
  width:50rpx;
  height:50rpx;
  animation: myAnimation 10s infinite linear;
}
@keyframes myAnimation{
  0%{
    transform: rotate(0)
  }
  100%{
    transform: rotate(360deg)
  }
}
.weui-search-bar{
  border:0;
  background: transparent;
}
.weui-search-bar__cancel-btn {
  color: #000;
}
.slide-image{
  width:100%;
  height: 100%;
  border-radius: 10rpx;
}
.nav{
  padding:20rpx 0 20rpx;
  display: flex;
  justify-content:space-around;
  border-bottom: 1px solid #c1c1c1;
}
.nav text{
  font-size: 28rpx;
  background: red;
  padding:16rpx;
  border-radius: 50%;
  color:#fff;
}
.tuijianTitle{
  padding: 16rpx 0;
  font-size: 28rpx;
  overflow: hidden;
}
.tuijianTitle .left{
  font-weight: 600;
}
.tuijianTitle .right{
  border:1rpx solid #999;
  border-radius: 30rpx;
  padding:0 18rpx;
}
.hotList{
  display: flex;
  flex-wrap:wrap;
  justify-content: space-between;

}
.hotDetail{
  width: 220rpx;
  height: 300rpx;
  overflow: hidden;
}
.hotDetail image{
  width: 220rpx;
  height: 220rpx;
  vertical-align: top;
  border-radius: 10rpx;
}
.hotDetail view{
  font-size: 20rpx;
  line-height: 30rpx;
}
.songList{
  overflow: hidden;
  padding:  14rpx 0;
  border-bottom: 1rpx solid rgba(227, 227, 227, 0.47);
}
.songContent{
  display: inline-block;
  overflow: hidden;
  width: 80%;
}
.songtitle{
  font-size: 30rpx;
  line-height: 30rpx;
  height: 30rpx;
  width: 100%;
  overflow: hidden;
}
.songAuthor{
  padding-top: 12rpx;
  font-size: 22rpx;
  line-height: 22rpx;
}
.songList image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 16rpx;
}
.songList text{
  font-size: 24rpx;
}